<?php
require_once '../../config/session.php';
require_once '../../includes/funciones.php';
verificarSesion();

// Verificar que el usuario puede acceder al seguimiento
if ($_SESSION['rol'] == 'administrador') {
    header("Location: /opticap/dashboard.php");
    exit();
}

$database = new Database();
$db = $database->getConnection();

$usuario_id = $_SESSION['usuario_id'];
$rol = $_SESSION['rol'];
$area_id = $_SESSION['area_id'];

// Construir filtro según el rol
$filtro_rol = obtenerRequerimientosPorRol($usuario_id, $rol, $area_id);
$where_clause = str_replace('WHERE', 'AND', $filtro_rol);

// Obtener actividades pendientes para el usuario
$query_pendientes = "SELECT sa.*, a.nombre as actividad_nombre, a.orden, a.tiempo_dias,
                            r.codigo, r.area_id, p.nombre as proceso_nombre,
                            ar.nombre as area_nombre, u.nombre as usuario_solicitante
                     FROM seguimiento_actividades sa 
                     INNER JOIN actividades a ON sa.actividad_id = a.id 
                     INNER JOIN requerimientos r ON sa.requerimiento_id = r.id 
                     INNER JOIN procesos p ON r.proceso_id = p.id 
                     INNER JOIN areas ar ON r.area_id = ar.id 
                     INNER JOIN usuarios u ON r.usuario_solicitante_id = u.id 
                     WHERE sa.estado = 'pendiente' 
                     AND (sa.usuario_id IS NULL OR sa.usuario_id = ?)
                     $where_clause
                     ORDER BY r.fecha_creacion DESC, a.orden";
$stmt_pendientes = $db->prepare($query_pendientes);
$stmt_pendientes->execute([$usuario_id]);
$actividades_pendientes = $stmt_pendientes->fetchAll(PDO::FETCH_ASSOC);

// Filtrar actividades pendientes por permisos
$actividades_disponibles = [];
foreach ($actividades_pendientes as $actividad) {
    if (puedeModificarActividad($usuario_id, $actividad['actividad_id'], $actividad['requerimiento_id'])) {
        $actividades_disponibles[] = $actividad;
    }
}

// Obtener actividades en progreso del usuario
$query_en_progreso = "SELECT sa.*, a.nombre as actividad_nombre, a.orden, a.tiempo_dias,
                             r.codigo, r.area_id, p.nombre as proceso_nombre,
                             ar.nombre as area_nombre, u.nombre as usuario_solicitante
                      FROM seguimiento_actividades sa 
                      INNER JOIN actividades a ON sa.actividad_id = a.id 
                      INNER JOIN requerimientos r ON sa.requerimiento_id = r.id 
                      INNER JOIN procesos p ON r.proceso_id = p.id 
                      INNER JOIN areas ar ON r.area_id = ar.id 
                      INNER JOIN usuarios u ON r.usuario_solicitante_id = u.id 
                      WHERE sa.estado = 'en_proceso' 
                      AND sa.usuario_id = ?
                      $where_clause
                      ORDER BY sa.fecha_inicio DESC";
$stmt_en_progreso = $db->prepare($query_en_progreso);
$stmt_en_progreso->execute([$usuario_id]);
$actividades_en_progreso = $stmt_en_progreso->fetchAll(PDO::FETCH_ASSOC);

// Obtener actividades completadas recientemente
$query_completadas = "SELECT sa.*, a.nombre as actividad_nombre, a.orden, a.tiempo_dias,
                             r.codigo, r.area_id, p.nombre as proceso_nombre,
                             ar.nombre as area_nombre, u.nombre as usuario_solicitante
                      FROM seguimiento_actividades sa 
                      INNER JOIN actividades a ON sa.actividad_id = a.id 
                      INNER JOIN requerimientos r ON sa.requerimiento_id = r.id 
                      INNER JOIN procesos p ON r.proceso_id = p.id 
                      INNER JOIN areas ar ON r.area_id = ar.id 
                      INNER JOIN usuarios u ON r.usuario_solicitante_id = u.id 
                      WHERE sa.estado = 'completado' 
                      AND sa.usuario_id = ?
                      $where_clause
                      ORDER BY sa.fecha_fin DESC 
                      LIMIT 10";
$stmt_completadas = $db->prepare($query_completadas);
$stmt_completadas->execute([$usuario_id]);
$actividades_completadas = $stmt_completadas->fetchAll(PDO::FETCH_ASSOC);
?>

